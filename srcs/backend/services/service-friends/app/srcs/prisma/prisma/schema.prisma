// Prisma schema file

// =====================
// Generator
// =====================
generator client {
  provider = "prisma-client"
  output = "./generated/client"
}



// =====================
// Datasource
// =====================
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



// =====================
// User Profile
// =====================
model Freinds {
  // =====================
  // Basic Info
  // =====================
  id        Int      @id @default(autoincrement())
  message   String
  timestamp DateTime @default(now())
}
